{
  "version": 2,
  "name": "claude-hive-swarm-guide",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/guide",
      "destination": "/docs/how-to-guide.html"
    },
    {
      "source": "/start", 
      "destination": "/START_HERE.md"
    },
    {
      "source": "/install",
      "destination": "/scripts/install-claude-hive-swarm.sh"
    },
    {
      "source": "/manifest.json",
      "destination": "/public/manifest.json"
    },
    {
      "source": "/sw.js",
      "destination": "/public/sw.js"
    }
  ],
  "headers": [
    {
      "source": "/docs/how-to-guide.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/scripts/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ]
}